    <style name="anfan_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@null</item>
        <!-- 去黑边 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置是否可滑动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:background">@android:color/transparent</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--绿边中间透明按钮的样式-->
    <style name="af_transparent_btn_style">
        <item name="android:textColor">@color/af_c06be77</item>
        <item name="android:background">@drawable/bg_btn_transparent</item>
    </style>

    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
