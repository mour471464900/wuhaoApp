<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!---->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="10dp"
        >
      <com.anfeng.wuhao.anfengkuaikan.view.StateTextView
          android:id="@+id/search"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:drawableLeft="@drawable/ic_search_refresh_normal"
          android:drawablePadding="6dp"

          app:normalBackgroundColor="#f2f2f2"
          app:pressedBackgroundColor="#f2f2f2"
          app:radius="20dp"
          android:gravity="center_vertical"
          android:paddingLeft="13dp"
          android:paddingRight="13dp"
          android:paddingStart="13dp"
          android:text="决战沙城"
          android:textColor="@color/colorHintGray"
          />
    </LinearLayout>
    <com.anfeng.wuhao.anfengkuaikan.view.LoadingFrameView
        android:id="@+id/frame_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fv_emptyIcon="@drawable/load_error"
        app:fv_emptyInfo="@string/no_item"
        >
        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/rv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.anfeng.wuhao.anfengkuaikan.view.LoadingFrameView>

</LinearLayout>