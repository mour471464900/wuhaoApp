<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/detailTabs"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        app:xTabIndicatorColor="@color/colorOrange"
        app:xTabIndicatorHeight="2dp"
        app:xTabIndicatorWidth="15dp"
        app:xTabMode="scrollable"
        app:xTabSelectedTextColor="@color/colorOrange"
        app:xTabSelectedTextSize="14sp"
        app:xTabTextColor="@color/color_4D2400"
        app:xTabTextSelectedBold="true"
        app:xTabTextSize="14dp"
        android:layout_marginBottom="3dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
    </android.support.v4.view.ViewPager>


</LinearLayout>