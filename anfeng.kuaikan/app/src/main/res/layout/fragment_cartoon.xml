<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FBEA30"
        >
       <RadioGroup
           android:id="@+id/radioTop"
           android:layout_centerInParent="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@drawable/shape_cartoon"
           android:padding="2dp"
           >
          <RadioButton
              android:id="@+id/radioCare"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:button="@null"
              android:text="@string/care"
              android:textColor="@color/color_cartoon_text"
              android:background="@drawable/select_cartoon_text"
              android:paddingTop="7dp"
              android:paddingBottom="7dp"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:checked="true"
              />
          <RadioButton
              android:id="@+id/radioHot"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:button="@null"
              android:text="@string/hot"
              android:textColor="@color/color_cartoon_text"
              android:background="@drawable/select_cartoon_text"
              android:paddingTop="7dp"
              android:paddingBottom="7dp"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"

              />
       </RadioGroup>
        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />


</LinearLayout>